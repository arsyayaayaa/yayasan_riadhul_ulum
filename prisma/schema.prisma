generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Berita {
  id      Int    @id @default(autoincrement())
  judul   String
  isi     String
  tanggal DateTime @default(now())
}

model VisiMisi {
  id   Int    @id @default(autoincrement())
  visi String
  misi String
}

model Majlis {
  id        Int    @id @default(autoincrement())
  deskripsi String
  url    String
  judul   String
  isi     String
}

model Tk {
  id        Int    @id @default(autoincrement())
  deskripsi String
  url    String
  judul   String
  isi     String
}

model Mi {
  id        Int    @id @default(autoincrement())
  deskripsi String
  url    String
  judul   String
  isi     String
}

model Mts {
  id        Int    @id @default(autoincrement())
  deskripsi String
  url    String
  judul   String
  isi     String
}

model Sejarah {
  id        Int    @id @default(autoincrement())
  deskripsi String
  url    String
  judul   String
  isi     String
} 